                        </HorizontalStackLayout>
                    </Grid>
                </Frame>
            </Border>

            <Border Stroke="#E9ECEF" Background="Transparent" Padding="-6">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0,0,0,0" />
                </Border.StrokeShape>
                <Frame BackgroundColor="Transparent" BorderColor="Transparent">
                    <Grid Padding="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*" />
                            <ColumnDefinition Width="2.5*" />
                            <ColumnDefinition Width="2.5*" />
                            <ColumnDefinition Width="2.5*" />
                        </Grid.ColumnDefinitions>

                        <Label Text="10989"
                               Margin="10,0,10,0" 
                               FontSize="14"
                               FontFamily="Roboto"
                               TextColor="#000000"
                               VerticalOptions="Center"
                               Grid.Column="0" />
                        <Label Text="Bookings"
                               Margin="10,0,10,0"
                               FontSize="14"
                               FontFamily="Roboto"
                               TextColor="#000000"
                               VerticalOptions="Center"
                               Grid.Column="1" />
                        <Label Text="10/18/2023 22:58:54"
                               Margin="10,0,10,0"
                               FontSize="14"
                               FontFamily="Roboto"
                               TextColor="#000000"
                               VerticalOptions="Center"
                               Grid.Column="2" />
                        <HorizontalStackLayout VerticalOptions="Center" Grid.Column="3">
