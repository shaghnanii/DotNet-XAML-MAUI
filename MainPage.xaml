<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntegrateX.MainPage"
             Title="Shakil Ahmad Khan">
    <VerticalStackLayout BackgroundColor="#FFFFFF">
        <Grid ColumnDefinitions=".50*, .50*" Padding="10" BackgroundColor="#5AB9EA" HeightRequest="60">
            <HorizontalStackLayout>
                <Image Source="back_arrow.png" HeightRequest="20" Margin="10"/>
                <Label Margin="0,7,0,0" FontFamily="Harabara" Text="Servr" FontSize="24"></Label>

                <VerticalStackLayout Margin="20,0,0,0">
                    <Label Margin="0,0,0,0" FontFamily="RobotoMedium" FontSize="16" FontAttributes="None" Text="Kempinski Jakarta"></Label>
                    <HorizontalStackLayout Margin="0,0,0,0">
                        <Label FontFamily="RobotoBold" Margin="0,1,6,0" Text="Last Sync Time: "></Label>
                        <Label FontFamily="RobotoRegular" Margin="0,0,0,0" Text="2023-03-14 18:36:00"></Label>
                        <Image Source="refresh_icon.png" HeightRequest="14"  Margin="4,1,0,1"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="15" Grid.Column="1" HorizontalOptions="End">
                <!--<Button FontFamily="RobotoRegular"
                        Text="New Orders"
                        HeightRequest="40"
                        BorderColor="#5AB9EA"
                        TextColor="#5AB9EA"
                        CornerRadius="20"
                        WidthRequest="150" />-->

                <Border WidthRequest="150"
                        HeightRequest="40"
                        Stroke="{AppThemeBinding Light='#5AB9EA', Dark='#5AB9EA'}"
                        StrokeShape="RoundRectangle 50"
                        BackgroundColor="#FFFFFF">
                    <HorizontalStackLayout Padding="0"
                                   Margin="0"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center">
                        <Label VerticalOptions="Center"
                               Margin="0,0,10,0"
                               TextColor="#5AB9EA"
                               Text="New Orders"
                               SemanticProperties.HeadingLevel="Level1"
                               FontSize="13" />
                        <Border WidthRequest="26"
                                HeightRequest="26"
                                VerticalOptions="End"
                                Margin="0,0,0,0"
                                Padding="0,0,2,0"
                                StrokeShape="RoundRectangle 13"
                                BackgroundColor="#5AB9EA" >
                            <Label Text="4"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontAttributes="Bold"
                                   FontSize="11" />
                        </Border>
                    </HorizontalStackLayout>
                </Border>
                
                <Button FontFamily="RobotoRegular" Text="New Integrations" HeightRequest="40" BackgroundColor="#5AB9EA" BorderColor="#ffffff" TextColor="#ffffff" CornerRadius="20" WidthRequest="150" />
                <ImageButton Source="minus_icon.png"
                             BackgroundColor="#5AB9EA"
                             WidthRequest="40"
                             HeightRequest="40"
                             BorderColor="#FFFFFF"
                             BorderWidth="2"
                             Padding="12"
                             CornerRadius="20"
                             HorizontalOptions="Center"
                             VerticalOptions="Center" />
                
                <ImageButton Source="cross_icon.png"
                             BackgroundColor="#FFFFFF"
                             WidthRequest="40"
                             HeightRequest="40"
                             Padding="14"
                             CornerRadius="20"
                             HorizontalOptions="Center"
                             VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Grid>
        
        <!--Second Tab-->
        <Grid ColumnDefinitions=".50*, .50*" Padding="10" HeightRequest="80">
            <HorizontalStackLayout Spacing="10">
                <Button FontFamily="RobotoRegular"
                        Text="Auto Integration"
                        BackgroundColor="#5AB9EA"
                        HeightRequest="40"
                        TextColor="#FFFFFF"
                        CornerRadius="20"
                        WidthRequest="150" />
                <Button FontFamily="RobotoRegular" Text="Clear Indicators" HeightRequest="40" BackgroundColor="#FFFFFF" BorderColor="#5AB9EA" TextColor="#5AB9EA" CornerRadius="20" WidthRequest="150" />
                <Button FontFamily="RobotoRegular" Text="Indicate All" HeightRequest="40" BackgroundColor="#FFFFFF" BorderColor="#5AB9EA" TextColor="#5AB9EA" CornerRadius="20" WidthRequest="150" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" Grid.Column="1" HorizontalOptions="End">
                <Button FontFamily="RobotoRegular" Text="Tutorial" HeightRequest="40" BorderColor="#5AB9EA" TextColor="#5AB9EA" CornerRadius="20" WidthRequest="150" />
                <Button FontFamily="RobotoRegular" Text="Preference" HeightRequest="40" BackgroundColor="#5AB9EA" BorderColor="#ffffff" TextColor="#ffffff" CornerRadius="20" WidthRequest="150" />
                <ImageButton Source="support_icon.png"
                             BackgroundColor="#181F3C"
                             WidthRequest="40"
                             HeightRequest="40"
                             Padding="10"
                             CornerRadius="20"
                             HorizontalOptions="Center"
                             VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Grid>


    </VerticalStackLayout>
    
</ContentPage>