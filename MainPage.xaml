                        </HorizontalStackLayout>
                    </Grid>
                </Frame>
            </Border>

            <Border Stroke="#E9ECEF" Background="Transparent" Padding="-6">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0,0,30,30" />
